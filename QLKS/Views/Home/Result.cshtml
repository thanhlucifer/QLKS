
@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="banner">
    <img src="~/Content/Home/images/banner.png" width="100%" />

</header>
<div class="container">
    <br/><br/><br/><h2></h2>
    @{
        if (ViewBag.result == "success")
        {
            <div class="alert alert-success" role="alert">
                <h2 style="color:#3c763d">Đã đặt phòng thành công.</h2>
                Cảm ơn bạn đã đặt phòng tại Dragon-Hotel.
            </div>
            <div class="alert alert-warning" role="alert"> Đặt phòng thành công<br /> Vui lòng tới khách sạn nhận phòng đúng thời gian đã đặt !</div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">Có lỗi trong quá trình đặt phòng. Bạn có thể liên hệ nhân viên phòng để giải quyết vấn đề !</div>
        }
    }
    <a href="@Url.Action("Index","Home")">Back to Home</a> | <a href="@Url.Action("BookRoom","Home")">Phòng đã đặt</a>
    <br/><br/>
</div>

